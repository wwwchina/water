<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recharge_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/ptsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示：普通水杯，大概可盛水200ML"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="实质水质：安全直接饮用"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="剩余水量：20L"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="制水时间：1分钟"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#eeeeee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="支付方式："
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rechargePayGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/recharge_alipay"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/selector_check_for_zhifubao"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="5dp"
                            />

                        <RadioButton
                            android:id="@+id/recharge_wchat_pay"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/selector_check_for_weixin"
                            android:button="@null"
                            android:padding="5dp" />
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="接水码："
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/rechargeInputCode"
                    android:layout_width="476dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border1"
                    android:hint="请输入接水码"
                    android:inputType="number"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"

                    android:textColorHint="#eeeeee"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="充值金额："
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/recharge_10"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="10"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/recharge_50"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="50"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/recharge_100"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="100"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="充值金额："
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/recharge_300"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="300"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/recharge_500"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/recharge_1000"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="1000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="50dp">

                <EditText
                    android:id="@+id/rechargeInputMoney"
                    android:layout_width="311dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border1"
                    android:hint="请输入金额"
                    android:inputType="number"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="#eeeeee"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/recharge_make_sure"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_makesure_btn"
                    android:paddingBottom="5dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:text="确定"
                    android:textColor="#eeeeee"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_qr"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/frt" />


            <LinearLayout
                android:id="@+id/qrTv"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="120dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="请扫码"
                    android:textColor="#BA7E03"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="请打开手机里的客户端，开启扫一扫功能并扫描屏幕上的二维码"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
