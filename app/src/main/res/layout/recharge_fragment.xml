<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recharge_window"
    android:background="@mipmap/bj"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ptsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableLeft="@mipmap/warning"
            android:text="温馨提示：普通水杯，大概可盛水200ML"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:text="实质水质：安全直接饮用"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:text="剩余水量：20L"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="制水时间：1分钟"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#eeeeee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="支付方式："
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/rechargePayGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/recharge_alipay"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/selector_check_for_zhifubao"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:checked="false"
                        />

                    <RadioButton
                        android:id="@+id/recharge_wchat_pay"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_check_for_weixin"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="true"
                        />
                </RadioGroup>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="接水码："
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/rechargeInputCode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入接水码"
                    android:textColorHint="#999999"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:layout_marginRight="20dp"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值金额："
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/recharge_10"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"/>
                <TextView
                    android:id="@+id/recharge_50"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:paddingRight="12dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"/>
                <TextView
                    android:id="@+id/recharge_100"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值金额："
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/recharge_300"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"/>
                <TextView
                    android:id="@+id/recharge_500"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:paddingRight="12dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"/>
                <TextView
                    android:id="@+id/recharge_1000"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/rechargeInputMoney"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入金额"
                    android:paddingLeft="10dp"
                    android:textColorHint="#999999"
                    android:inputType="number"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/trans_bg_lrc_alpha_black_border"
                    android:layout_marginRight="20dp"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/recharge_make_sure"
                    android:layout_width="wrap_content"
                    android:paddingLeft="6dp"
                    android:textSize="12sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="6dp"
                    android:textColor="#eeeeee"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_makesure_btn"
                    android:text="确定"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/frt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="请扫码"
                    android:textColor="#BA7E03"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="请打开手机里的客户端，开启扫一扫功能并扫描屏幕上的二维码"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
